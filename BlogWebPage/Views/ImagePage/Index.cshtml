@using BlogWebPage.Models.Entity
@model List<Images>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int number = 1;
}

<br />
<h2 class="text-center">Yeni Resim Ekleme Admin Kontrol Sayfası</h2>
<br />

@if (Model.Count == 0)
{
    <p>No experiences to display.</p>
}
else
{
    <div class="text-center">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Başlık</th>
                    <th>Tarih</th>
                    <th>Düzenle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@number</td>
                    <td>@item.Title</td>
                    <td>@item.Date.Value.ToString("dd MMM yyyy")</td>
                    <td><a href="/ImagePage/EditPost/@item.ID" class="btn btn-info btn-sm"><i class="fas fa-pencil-alt"></i> Düzenle</a></td>
                    <td><a href="/ImagePage/DeletePost/@item.ID" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Sil</a></td>
                </tr>
                number++;
            }
        </table>
    </div>
}

<a href="/ImagePage/Addpost/" class="btn btn-dark">Yeni Post</a>
