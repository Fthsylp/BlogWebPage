@using BlogWebPage.Models.Entity
@model List<Login>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2 class="text-center">Kullanıcılar Admin Kontrol Sayfası</h2>
<br />


@if (Model.Count == 0)
{
    <p>No users to display.</p>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Password</th>
            <th>Delete User</th>
            <th>Edit User</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Username</td>
                <td>@item.Password</td>
                <td><a href="#" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Delete</a></td>
                <td><a href="/User/EditUser/@item.ID" class="btn btn-info"><i class="fas fa-pencil-alt"></i>Edit</a></td>
            </tr>
        }
    </table>
}
<button class="btn btn-dark" data-toggle="modal" data-target="#Modal1">Yeni Admin Kullanıcısı Ekle</button>


<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Yeni Kullanıcı Medya Ekleme Paneli</h2>
            </div>
            <form method="post" action="/User/NewUser">
                <div class="modal-body">
                    <label>Kullanıcı Adı</label>
                    <input type="text" class="form-control mb-2" name="Username" />

                    <label>Kullanıcı Şifre</label>
                    <input type="text" class="form-control mb-2" name="Password" />

                    <button class="btn btn-dark">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
